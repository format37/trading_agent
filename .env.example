# ============================================================================
# Trading Agent Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values

# ----------------------------------------------------------------------------
# API Keys
# ----------------------------------------------------------------------------
# Anthropic API Key (required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Polygon.io API Key (for market data)
POLYGON_API_KEY=your_polygon_api_key_here

# Binance API Keys (for trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ----------------------------------------------------------------------------
# OpenTelemetry Configuration
# ----------------------------------------------------------------------------

# Enable or disable telemetry (true/false, 1/0, yes/no)
ENABLE_TELEMETRY=true

# Exporter type: console, otlp-grpc, otlp-http, or all
# - console: Output traces to console (good for local debugging)
# - otlp-grpc: Send traces to an OTLP-compatible backend via gRPC
# - otlp-http: Send traces to an OTLP-compatible backend via HTTP
# - all: Use both console and OTLP exporters
OTEL_EXPORTER_TYPE=console

# ----------------------------------------------------------------------------
# OTLP Exporter Configuration (for otlp-grpc or otlp-http)
# ----------------------------------------------------------------------------

# OTLP endpoint (gRPC: typically port 4317, HTTP: typically port 4318)
# Examples:
# - SigNoz (local): http://localhost:4317
# - Grafana Cloud: https://your-instance.grafana.net:443
# - Honeycomb: https://api.honeycomb.io:443
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# OTLP headers (for authentication, format: key1=value1,key2=value2)
# Examples:
# - SigNoz (local): leave empty
# - Grafana Cloud: Authorization=Basic base64_encoded_credentials
# - Honeycomb: x-honeycomb-team=your_api_key
OTEL_EXPORTER_OTLP_HEADERS=

# ----------------------------------------------------------------------------
# Service Configuration
# ----------------------------------------------------------------------------

# Service name for telemetry identification
OTEL_SERVICE_NAME=claude-trading-agent

# Deployment environment (development, staging, production)
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# Example Configurations for Popular Backends
# ----------------------------------------------------------------------------

# --- SigNoz (Local Docker) ---
# ENABLE_TELEMETRY=true
# OTEL_EXPORTER_TYPE=otlp-grpc
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_EXPORTER_OTLP_HEADERS=

# --- Grafana Cloud ---
# ENABLE_TELEMETRY=true
# OTEL_EXPORTER_TYPE=otlp-http
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-instance.grafana.net:443/otlp
# OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic your_base64_credentials

# --- Honeycomb ---
# ENABLE_TELEMETRY=true
# OTEL_EXPORTER_TYPE=otlp-grpc
# OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io:443
# OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your_api_key

# --- Console Only (Local Debugging) ---
# ENABLE_TELEMETRY=true
# OTEL_EXPORTER_TYPE=console

# --- Disabled ---
# ENABLE_TELEMETRY=false
